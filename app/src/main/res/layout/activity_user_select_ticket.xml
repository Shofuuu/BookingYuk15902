<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".userSelectTicket">

    <Button
        android:id="@+id/btnTiketPesawat"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/button_style"
        android:text="Tiket Pesawat"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTiketKeretaApi"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_style"
        android:text="Tiket Kereta Api"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTiketPesawat" />

    <Button
        android:id="@+id/btnTiketBis"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_style"
        android:text="Tiket Bis"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTiketKeretaApi" />

</androidx.constraintlayout.widget.ConstraintLayout>