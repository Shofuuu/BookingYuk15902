<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".userTiketPesawat">

    <Spinner
        android:id="@+id/spinnerKendaraan"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/labelKendaraan"
        app:layout_constraintTop_toTopOf="@+id/labelKendaraan" />

    <TextView
        android:id="@+id/labelKendaraan"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:text="Pilih  x"
        android:textColor="@color/textColor"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Hari Penerbangan"
        android:textColor="@color/textColor"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.113"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelKendaraan" />

    <RadioGroup
        android:id="@+id/radioHariKiri"
        android:layout_width="179dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8">

        <RadioButton
            android:id="@+id/radioSenin"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Senin"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioSelasa"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Selasa"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioRabu"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Rabu"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioKamis"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:text="Kamis"
            android:textSize="25dp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioHariKanan"
        android:layout_width="180dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toEndOf="@+id/radioHariKiri"
        app:layout_constraintTop_toBottomOf="@+id/textView8" >

        <RadioButton
            android:id="@+id/radioJumat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jum'at"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioSabtu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sabtu"
            android:textSize="25dp" />

        <RadioButton
            android:id="@+id/radioMinggu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minggu"
            android:textSize="25dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="12dp"
        android:text="Waktu"
        android:textColor="@color/textColor"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioHariKiri" />

    <CheckBox
        android:id="@+id/cbPagi"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:text="Pagi"
        android:textColor="@color/textColor"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <CheckBox
        android:id="@+id/cbSiang"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Siang"
        android:textColor="@color/textColor"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/cbPagi"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <CheckBox
        android:id="@+id/cbSore"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Sore"
        android:textColor="@color/textColor"
        android:textSize="25dp"
        app:layout_constraintStart_toEndOf="@+id/cbSiang"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_style"
        android:text="Simpan!"
        android:textAllCaps="false"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbSiang" />

</androidx.constraintlayout.widget.ConstraintLayout>